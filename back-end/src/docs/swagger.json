{
  "openapi": "3.0.0",
  "info": {
    "title": "SpaceZone API",
    "version": "1.0.0",
    "description": "Documentação da API SpaceZone - Plataforma de Blog com Usuários, Posts e Comentários"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Servidor local"
    },
    {
      "url": "https://api.spacezone.com",
      "description": "Servidor de produção"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "required": ["id", "nickname", "email"],
        "properties": {
          "id": {
            "type": "integer"
          },
          "nickname": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string"
          },
          "is_redator": {
            "type": "boolean",
            "default": false
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Post": {
        "type": "object",
        "required": ["id", "title", "subtitle", "body"],
        "properties": {
          "id": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "subtitle": {
            "type": "string"
          },
          "body": {
            "type": "string"
          },
          "author": {
            "type": "integer",
            "nullable": true,
            "description": "ID do autor/redator do post"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Comment": {
        "type": "object",
        "required": ["id", "content", "postId"],
        "properties": {
          "id": {
            "type": "integer"
          },
          "content": {
            "type": "string"
          },
          "postId": {
            "type": "integer"
          },
          "userId": {
            "type": "integer",
            "nullable": true
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/users": {
      "get": {
        "summary": "Lista todos os usuários",
        "tags": ["Users"],
        "description": "Retorna uma lista de todos os usuários cadastrados no sistema",
        "responses": {
          "200": {
            "description": "Lista de usuários retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Cria um novo usuário",
        "tags": ["Users"],
        "description": "Cria um novo usuário com email e senha",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["nickname", "email", "password"],
                "properties": {
                  "nickname": {
                    "type": "string",
                    "example": "johndoe"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "john@example.com"
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "example": "securepassword123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos ou email já cadastrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "summary": "Busca usuário por ID",
        "tags": ["Users"],
        "description": "Retorna os detalhes de um usuário específico",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID do usuário"
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Não autenticado"
          }
        }
      },
      "put": {
        "summary": "Atualiza um usuário",
        "tags": ["Users"],
        "description": "Atualiza os dados de um usuário existente",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID do usuário"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nickname": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado"
          },
          "400": {
            "description": "Dados inválidos"
          },
          "401": {
            "description": "Não autenticado"
          }
        }
      },
      "delete": {
        "summary": "Remove um usuário",
        "tags": ["Users"],
        "description": "Deleta um usuário do sistema",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID do usuário"
          }
        ],
        "responses": {
          "204": {
            "description": "Usuário removido com sucesso"
          },
          "404": {
            "description": "Usuário não encontrado"
          },
          "401": {
            "description": "Não autenticado"
          }
        }
      }
    },
    "/posts": {
      "get": {
        "summary": "Lista todos os posts",
        "tags": ["Posts"],
        "description": "Retorna uma lista de todos os posts publicados",
        "responses": {
          "200": {
            "description": "Lista de posts retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Cria um novo post",
        "tags": ["Posts"],
        "description": "Cria um novo post. Requer autenticação.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["title", "subtitle", "body"],
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "Título do Post"
                  },
                  "subtitle": {
                    "type": "string",
                    "example": "Subtítulo descritivo"
                  },
                  "body": {
                    "type": "string",
                    "example": "Conteúdo completo do post..."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Post criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Post"
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos"
          },
          "401": {
            "description": "Não autenticado"
          }
        }
      }
    },
    "/posts/{id}": {
      "get": {
        "summary": "Busca um post por ID",
        "tags": ["Posts"],
        "description": "Retorna os detalhes de um post específico",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID do post"
          }
        ],
        "responses": {
          "200": {
            "description": "Post encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Post"
                }
              }
            }
          },
          "404": {
            "description": "Post não encontrado"
          }
        }
      },
      "put": {
        "summary": "Atualiza um post",
        "tags": ["Posts"],
        "description": "Atualiza os dados de um post existente. Requer autenticação.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID do post"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "subtitle": {
                    "type": "string"
                  },
                  "body": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Post atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Post"
                }
              }
            }
          },
          "404": {
            "description": "Post não encontrado"
          },
          "400": {
            "description": "Dados inválidos"
          },
          "401": {
            "description": "Não autenticado"
          }
        }
      },
      "delete": {
        "summary": "Remove um post",
        "tags": ["Posts"],
        "description": "Deleta um post do sistema. Requer autenticação.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID do post"
          }
        ],
        "responses": {
          "204": {
            "description": "Post removido com sucesso"
          },
          "404": {
            "description": "Post não encontrado"
          },
          "401": {
            "description": "Não autenticado"
          }
        }
      }
    },
    "/comments": {
      "get": {
        "summary": "Lista todos os comentários",
        "tags": ["Comments"],
        "description": "Retorna uma lista de todos os comentários do sistema",
        "responses": {
          "200": {
            "description": "Lista de comentários retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Comment"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/comments/{id}": {
      "get": {
        "summary": "Busca um comentário por ID",
        "tags": ["Comments"],
        "description": "Retorna os detalhes de um comentário específico",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID do comentário"
          }
        ],
        "responses": {
          "200": {
            "description": "Comentário encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Comment"
                }
              }
            }
          },
          "404": {
            "description": "Comentário não encontrado"
          }
        }
      },
      "put": {
        "summary": "Atualiza um comentário",
        "tags": ["Comments"],
        "description": "Atualiza um comentário existente. Requer autenticação.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID do comentário"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["content"],
                "properties": {
                  "content": {
                    "type": "string",
                    "example": "Novo conteúdo do comentário"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Comentário atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Comment"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao atualizar comentário"
          },
          "404": {
            "description": "Comentário não encontrado"
          },
          "401": {
            "description": "Não autenticado"
          }
        }
      },
      "delete": {
        "summary": "Remove um comentário",
        "tags": ["Comments"],
        "description": "Deleta um comentário do sistema. Requer autenticação.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID do comentário"
          }
        ],
        "responses": {
          "204": {
            "description": "Comentário removido com sucesso"
          },
          "404": {
            "description": "Comentário não encontrado"
          },
          "401": {
            "description": "Não autenticado"
          }
        }
      }
    },
    "/comments/{postId}": {
      "post": {
        "summary": "Cria um comentário em um post",
        "tags": ["Comments"],
        "description": "Cria um novo comentário em um post específico. Requer autenticação.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "postId",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID do post"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["content"],
                "properties": {
                  "content": {
                    "type": "string",
                    "example": "Ótimo post!"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Comentário criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Comment"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao criar comentário"
          },
          "401": {
            "description": "Não autenticado"
          }
        }
      }
    },
    "/comments/post/{postId}": {
      "get": {
        "summary": "Lista comentários de um post",
        "tags": ["Comments"],
        "description": "Retorna todos os comentários de um post específico",
        "parameters": [
          {
            "in": "path",
            "name": "postId",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID do post"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de comentários do post",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Comment"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/redatores": {
      "get": {
        "summary": "Lista todos os redatores",
        "tags": ["Redatores"],
        "description": "Retorna uma lista de todos os usuários que são redatores",
        "responses": {
          "200": {
            "description": "Lista de redatores retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/redatores/promote/{id}": {
      "put": {
        "summary": "Promove um usuário a redator",
        "tags": ["Redatores"],
        "description": "Promove um usuário para a função de redator. Apenas redatores podem promover outros usuários. Requer autenticação.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID do usuário a ser promovido"
          }
        ],
        "responses": {
          "201": {
            "description": "Usuário promovido a redator com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "403": {
            "description": "Apenas redatores podem promover usuários"
          },
          "401": {
            "description": "Não autenticado"
          }
        }
      }
    },
    "/redatores/demote/{id}": {
      "put": {
        "summary": "Rebaixa um redator",
        "tags": ["Redatores"],
        "description": "Remove um usuário da função de redator. Apenas o próprio redator pode se rebaixar. Requer autenticação.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID do redator a ser rebaixado"
          }
        ],
        "responses": {
          "200": {
            "description": "Redator rebaixado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "403": {
            "description": "Apenas o próprio redator pode se rebaixar"
          },
          "401": {
            "description": "Não autenticado"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Users",
      "description": "Operações de gerenciamento de usuários"
    },
    {
      "name": "Posts",
      "description": "Operações de gerenciamento de posts"
    },
    {
      "name": "Comments",
      "description": "Operações de gerenciamento de comentários"
    },
    {
      "name": "Redatores",
      "description": "Operações de gerenciamento de redatores"
    }
  ]
}